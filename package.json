{
    "name": "controlbox",
    "version": "1.0.0-rc1",
    "description": "Autonomous Race Control System for Online Leagues",
    "private": true,
    "workspaces": [
        "packages/*",
        "tools/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "dev": "npm run dev --workspace=packages/server & npm run dev --workspace=packages/dashboard",
        "dev:server": "npm run dev --workspace=packages/server",
        "dev:dashboard": "npm run dev --workspace=packages/dashboard",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "typecheck": "npm run typecheck --workspaces --if-present",
        "db:migrate": "npm run migrate --workspace=packages/server",
        "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist tools/*/node_modules tools/*/dist",
        "export:reference": "npx tsx tools/export-reference.ts",
        "export:reference:watch": "npx tsx tools/export-reference.ts --watch"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "author": "OKBoxBox",
    "license": "MIT"
}