# Ok, Box Box Environment Configuration

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/controlbox
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=controlbox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# External Services
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Squarespace Integration
SQUARESPACE_WEBHOOK_SECRET=your-squarespace-webhook-secret

# iRacing Configuration
IRACING_EMAIL=your-iracing-email
IRACING_PASSWORD=your-iracing-password

# Development
LOG_LEVEL=INFO
POLL_RATE_HZ=10

# Trust System
CONFIDENCE_GATE_THRESHOLD=0.6